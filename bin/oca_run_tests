#!/bin/bash

#
# Run tests. Use unbuffer to get a colored output.
#

set -ex

oca_wait_for_postgres

ADDONS=$(oca_list_addons_to_test)
if [ -z "$ADDONS" ]; then
    exit 0
fi

unbuffer coverage run --include "${ADDONS_DIR}/*" --branch \
    $(which odoo) \
    -d ${PGDATABASE} \
    -i ${ADDONS} \
    --test-enable \
    --workers=${WORKERS:-0} \
    --stop-after-init
